<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
　　<!--変更前-->
    <!--%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>-->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container ">
         <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
             <li>
                <%= link_to  books_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-home"></i>Home
                <% end %>
             </li>
             <li>
                <%= link_to users_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-user-plus"></i>Users
                <% end %>
             </li>
             <li>
                <%= link_to books_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-book"></i>Books
                <% end %>
             </li>
             <li>
                <%= link_to destroy_user_session_path, method: :delete, class: "text-white navbar-brand" do %>
                 <i class=" fas fa-sign-out-alt"></i>Log out
                <% end %>
             </li>
            <% else %>
             <li>
                <%= link_to root_path, class: "text-white navbar-brand" do  %>
                 <i class="fas fa-home"></i>Home
             </li>
                <% end %>
             <li>
               <%= link_to about_path,  class: "text-white navbar-brand" do %>  
                 <i class="fas fa-link"></i>About
             </li>
                <% end %>
             <li>
                <%= link_to new_user_registration_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-user-plus"></i>Sign up
             </li>
                <% end %>
             <li>
                 <%= link_to new_user_session_path, class: "text-white navbar-brand" do %>
                  <i class="fas fa-sign-in-alt"></i>Log in
             </li>
                <% end %>
            <% end %>
            </ul>
          </div>
       </div>
     </nav> 
    </header>


    <%= yield %>
 <main>
     
 </main>
 
 <footer>
   <div class="container mt-5">
     <div class="row">
      <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
    </div>
　  </div>
   </div>
   </footer>
  </body>
</html>