<%= render 'users/pikachu', user: @user, book: @book_new %>
    <div class = "col-md-8 offset-md-1">
     <h2>Book detail</h2>
      <table class="table">
       <tbody>
         <tr>
                <!--%= @user do |user| %>-->
            <td> 
              <%=link_to image_tag @book.user.get_profile_image %><br>
              <%=link_to @book.user.name, user_path(@book.user.id) %>
            </td>
                
            <td>
                <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
                <%= @book.body %>
            </td>
            <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit" ,edit_book_path(@book.id), class:"btn btn-success" %>
            <td>
                <%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => " Are you sureï¼Ÿ", class:"btn btn-danger" %>
            </td>
                <% end %>
        </tr>
        </tbody>
    </table>
   </div>
 