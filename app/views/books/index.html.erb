<%= flash[:notice] %>
<h1>Books</h1>

<table>
   <thead>
      <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan "4">O</th>
      </tr>
   </thead>
   <tbody>
       <!--each do =繰り返し-->
   <% @books.each do |book| %>
       <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td>
               <%= link_to "show" ,book_path(book.id), class:"show" %>
           </td>
           <td>
               <%= link_to "Edit" ,edit_book_path(book.id), class:"edit" %>
           </td>
           <td>
               <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => " get ready to delete？", class:"destroy" %>
           </td>
        </tr>
    <% end %>
   </tbody>
</table>

<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
	
  <p>Opinion</p>
  <%= f.text_area :body %><br>

  
  <%= f.submit 'Create Book' %></br>
  
<% end %>